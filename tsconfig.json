{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "esnext", "dom"],
    "module": "commonjs",
    "rootDir": "./src",
    "resolveJsonModule": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
